<div class="used-information">
  <h1 class="usedcd">U S E D C D</h1>
    <div class="row clearfix">
        <div class="search-artist">
            <%= search_form_for @search, url: items_path do |f| %>
            <%= f.label :商品検索 %>
            <%= f.search_field :item_name_cont %>
            <%= f.submit "検索" %>
            <% end %>
        </div>
        <div class="col-lg-3">
          <% @rank.each.with_index(1) do |rank, i| %>
          <div class="rank">
            <h3 class="ranking"><%= "第#{i}位" %></h3>
            <%= rank.item_name %>
          </div>
          <% end %>
        </div>
        <div class="col-lg-9">
              <% @items.each do |item|%>
              <div class="item-list">
                <div class="item-image">
                   <%= attachment_image_tag item, :item_image, size: "100x100", fallback: "no_image.jpg" %>
                </div>
                <div class="item-name">
                   <p><%= link_to item.item_name, item_path(item.id) %></p>
                </div>
                <div class="artist-name">
                   <p><%= link_to item.artist.artist_name, artist_path(item.artist.id) %></p>
                </div>
                <div class="item-price">
                  <p> ¥ <%= item.price %></p>
                </div>
                <div class="item-stock">
                    <% if item.stock == 0 %>
                      <%= 'Sold Out!!' %>
                    <% end %>
                </div>
              </div>

                <% end %>
        </div>
        <div class="paginate">
              <%= paginate @items, class: "paginate" %>
        </div>
    </div>
</div>


