<h1>お問い合わせフォーム</h1>

<%= form_for(@contact) do |f| %>
  <ul>

  	<li>
  	   <%= f.text_field :last_name, :placeholder => "姓" %>
  	   <%= f.text_field :first_name, :placeholder => "名" %>
  	</li>

  	<li class="e-mail">
  	   <label for="e-mail">メールアドレス</label>
  	   <%= f.text_field :email %>
  	</li>

	<li class="contact_title">
	   <label for="contact_title">タイトル</label>
	   <%= f.text_field :cotact_title %>
	</li>

	<li class="contact_text">
		<label for="contact_text">内容</label>
	    <%= f.text_area :contact_text %>
	</li>

	   <%= f.submit '送信' %>
  </ul>

<% end %>