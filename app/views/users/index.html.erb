<h1>Users#index</h1>
<h2>ユーザー一覧</h2>

<%= search_form_for @q do |f| %>
<%= f.label :last_name_cont, "検索" %>
<%= f.search_field :last_name_cont %>

<div class="actions"><%= f.submit "検索" %></div>
<% end %>

<% @users.each do |user| %>
<p>名前</p>
<span><%= user.last_name %> <%= user.first_name %></span>
<%= button_to "詳細", user_path(user.id), method: :get, class: 'btn btn-default' %>
<% end %>

<div class="pagination">
    <p><<</p>
    <p>< </p>
    <p>1 </p>
    <p>2 </p>
    <p>3 </p>
    <p>> </p>
    <p>>> </p>
</div>
