<h2>ユーザー一覧</h2>

    <div class="search-user" >
	    <%= search_form_for @q do |f| %>
	    <%= f.label :last_name_cont, "ユーザー検索" %>
	    <%= f.search_field :last_name_or_first_name_cont %>
	    <%= f.submit "検索" %>
	    <% end %>
    </div>

    <div class="container" >
	    <div class="row" >
		    <% @users.each do |user| %>
		    <div class="col-lg-4" >
			<p>名前 / 
			<%= user.last_name %> <%= user.first_name %><%= button_to "詳細", user_path(user.id), method: :get, class: 'btn btn-default' %></p>
		    </div>
		    <% end %>
	    </div>
    </div>
    <div class="paginate">
	    <%= paginate @items, class: "paginate" %>
    </div>