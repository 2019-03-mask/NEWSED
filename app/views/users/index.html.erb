<h1><span class="label label-default">ユーザー一覧</span></h1>

<div class="user-index-admin">
	<div class="form-horizontal" role="form">
	    <%= search_form_for @q do |f| %>
	      <div class="search-user" >
	 		<div class="form-group">
		      <%= f.label :last_name_cont, "ユーザー検索" %>
		    </div>
		    <div class="col-xs-10">
			  <%= f.search_field :last_name_or_first_name_cont, :class => "form-control", placeholder: "ユーザー名（姓）" %>
			</div>
		  </div>
			  <%= f.submit "検索", :class => "btn btn-primary" %>
		<% end %>
	</div>
</div>


 <div class="container" >
     <div class="col-lg-6 user-list">
	    <table class="table">
	    	<thead>
	      		<th>name</th>
	      		<th></th>
	            </thead>
	            <% @users.each do |user| %>
	            <thead>
			    <th><%= user.last_name %><%= user.first_name %></th>
			    <th><%= button_to "詳細", user_path(user.id), method: :get, class: 'btn btn-default' %></th>
	         <% end %>
		    </thead>
		</table>
	 </div>
 </div>

 <div class="user-admin-index-paginate">
   <%= paginate @users %>
 </div>

