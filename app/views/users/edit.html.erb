<div class="user-user-edit">
	<h1 class="user-registration-title"><span class="label label-default">ユーザー編集</span></h1>

	<%=  form_for(@user) do |f| %>
	<div class="field form-group">
		<%= f.label :last_name, "名前（姓）" %>
		<%=  f.text_field :last_name, :class => "form-control" %>
		<%= f.label :first_name, "名前（名）" %>
		<%=  f.text_field :first_name, :class => "form-control" %>
	</div>

	<div class ='field form-group'>
		<%= f.label :last_name_kana, "名前カナ（姓）" %>
		<%=  f.text_field :last_name_kana %>
		<%= f.label :first_name_kana, "名前カナ（姓）" %>
		<%=  f.text_field :first_name_kana %>
	</div>

	<div class ='field form-group'>
		<%= f.label :zip_code, "郵便番号" %>
		<%=  f.text_field :zip_code %>
	</div>

	<div class ='field form-group'>
		<%= f.label :address, "住所" %>
		<%=  f.text_field :address %>
	</div>

	<div class = 'field form-group'>
		<%= f.label :phone_number, "電話番号" %>
		<%=  f.text_field :phone_number %>
	</div>

	<div class ='field form-group'>
		<%= f.label :email, "メール" %>
		<%=  f.text_field :email %>
	</div>

		<%= f.submit '更新' %>
	<% end %>
</div>