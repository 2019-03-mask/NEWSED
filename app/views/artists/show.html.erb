<h1>アーティスト詳細</h1>


	<%= attachment_image_tag @artist, :artist_image, size: "300x300" %>
	<%= @artist.artist_name %>

<div>
   <% @items.each do |item| %>
   <%= attachment_image_tag item, :item_image, size: "100x100" %>
   <%= item.item_name %>
   <%= item.artist.artist_name %>
   <%= item.stock %>
   <% if item.stock == 0 %>
          <%= 'Sold Out' %>
        <% else %>
          <%= item.stock %>
        <% end %>

    <% end %>
</div>








<div class="artist-item">
	<%= link_to "アーティスト新品商品", artist_new_item_path(@artist.id) %>
	<%= link_to "アーティスト中古商品", artist_used_item_path(@artist.id) %>
</div>